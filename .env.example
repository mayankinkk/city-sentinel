# ============================================
# City Sentinel - Environment Variables
# ============================================
# Copy this file to .env.production and fill in your values

# ============================================
# Supabase Configuration
# ============================================
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
VITE_SUPABASE_PROJECT_ID=your-project-id

# Service role key (keep secret, only for backend)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# Database (for self-hosted PostgreSQL)
# ============================================
DB_PASSWORD=your-secure-database-password-min-32-chars
DB_HOST=localhost
DB_PORT=5432
DB_NAME=city_sentinel

# ============================================
# Storage (MinIO/S3)
# ============================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your-secure-minio-password-min-16-chars
STORAGE_BUCKET=issue-images

# ============================================
# Cache (Redis)
# ============================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Email Service
# ============================================
RESEND_API_KEY=re_xxxxxxxxxxxx

# ============================================
# Application Settings
# ============================================
NODE_ENV=production
SITE_URL=https://city-sentinel.yourgovt.gov.in

# JWT Secret (for self-hosted auth)
JWT_SECRET=your-jwt-secret-min-32-chars

# ============================================
# SSL/TLS
# ============================================
SSL_CERT_PATH=/etc/ssl/certs/city-sentinel.crt
SSL_KEY_PATH=/etc/ssl/private/city-sentinel.key

# ============================================
# Monitoring (optional)
# ============================================
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_FEATURES=false
ENABLE_PUSH_NOTIFICATIONS=false
